{% extends '::base.html.twig' %}

{% block body %}
	{% block content %}


		<div class="container">
			<h2>Ingresar al sistema Administrador</h2>
			<div class="row well">
				<div class="col-md-6 col-md-offset-3">
					<form role="form" action="{{ path('login_check') }}" method="post">
						<div class="form-group">
							<label for="usuario">Usuario:</label>
							<input class="form-control" placeholder="Ingrese usuario" id="username" type="text" name="_username" value="{{ last_username }}" />
						</div>

						<div class="form-group">
							<label for="password">Clave:</label>
							<input class="form-control" placeholder="Ingrese clave" id="password" type="password" name="_password" />
							{% if error %}
								<span class="text-danger">{{ error.message }}</span>
							{% endif %}
						</div>
						<input class="btn btn-default" type="submit" name="login" />
					</form>
				</div>
			</div>
		</div>
	{% endblock %}
{% endblock %}