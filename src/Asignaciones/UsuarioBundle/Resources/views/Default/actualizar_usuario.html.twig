{% extends '::base.html.twig' %}

{% block body %}
	{% block content %}
		<div class="container">
			<h2>Editar el usuario: <strong>{{ usuario.nombre }} {{ usuario.apellido }}</strong> </h2>
			<div class="row well">
				<div class="col-md-6 col-md-offset-3">
					<form role = "form" action="{{ path('usuario_actualizar', { id : usuario.id }) }}" method="post" {{ form_enctype(formulario) }} >
						<div class="form-group">
							{{ form_label(formulario.username) }}
							{{ form_widget(formulario.username, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Agregue nombre de usuario' }})  }}
							<span class="text-danger">{{ form_errors(formulario.username) }}</span>
						</div>

						<div class="form-group">
							{{ form_label(formulario.password) }}
							{{ form_widget(formulario.password, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Clave' }})  }}
							<span class="text-danger">{{ form_errors(formulario.password) }}</span>
						</div>

						<div class="form-group">
							{{ form_label(formulario.nombre) }}
							{{ form_widget(formulario.nombre, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Nombre del usuario' }})  }}
							<span class="text-danger">{{ form_errors(formulario.nombre) }}</span>
						</div>

						<div class="form-group">
							{{ form_label(formulario.apellido) }}
							{{ form_widget(formulario.apellido, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Apellido del usuario' }})  }}
							<span class="text-danger">{{ form_errors(formulario.apellido) }}</span>
						</div>

						<div class="form-group">
							{{ form_label(formulario.email) }}
							{{ form_widget(formulario.email, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Agrege su email' }})  }}
							<span class="text-danger">{{ form_errors(formulario.email) }}</span>
						</div>

						<div class="form-group">
							{{ form_label(formulario.role) }}
							{{ form_widget(formulario.role, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Ingrese nivel de usuario' }})  }}
							<span class="text-danger">{{ form_errors(formulario.role) }}</span>
						</div>

						<div class="checkbox">
							<label>
								{{ form_widget(formulario.esta_activo) }} Activo
								<span class="text-danger">{{ form_errors(formulario.esta_activo) }}</span>
							</label>
						</div>

						{#{ form_widget(formulario) }#}
						<input class="btn btn-default" type="submit" value="Actualizar" />
					</form>
				</div>
			</div>
		</div>
	{% endblock %}                	
{% endblock %}